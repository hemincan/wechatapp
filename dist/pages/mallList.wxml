        <view class="weui-flex" style="background:#fff;margin-bottom:4px;">
           <block wx:for="{{sortItem}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="weui-flex__item"><view style="border-right:1px solid #efefef;" bindtap="sortItemCick" class="{{ currentSelectSortItem == item.name ? 'liBkgCor sort-item':'sort-item' }}" data-wpysortitemcick-a="{{item}}">{{item.name}}</view></view>
            
            </block>
        </view>
      
        <view class="page__bd">
            <view class="weui-panel weui-panel_access;">
                <!-- <view class="weui-panel__hd">图文组合列表</view> -->
                <view class="weui-panel__bd" style="background:#efefef">

                    <!-- <scroll-view scroll-y="true" class="swiper-item-box"> -->
                    <view  wx:if="{{!normalView}}" class="shop_item">
                      <navigator class="list" wx:for="{{goodsData}}" wx:key="item" url="/pages/goods_detail?id={{item.id}}&purchasetype={{purchasetype}}&special={{special}}">
                        <view class="image_box">
                          <image src="{{icon60}}"/>
                        </view>
                        <view class="goods">
                          <view class="product_name" wx:if="{{showTitle}}">{{item.name}}</view>
                          <view class="product_info">
                            <view class="price">￥{{item.price}}</view>
                            <view class="cartImg" style="width:40px;"><image src="{{icon60}}"/></view>
                            <!-- <view class="cost_price">￥{{item.marketPrice}}</view>
                            <view class="sale_num">销量{{item.saleCount}}件</view> -->
                          </view>
                        </view>
                      </navigator>
                    </view>
                    <!-- </scroll-view> -->




                    <block  wx:if="{{normalView}}" wx:for="{{goodsData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <navigator url="/pages/goodsDetails" class=" weui-media-box_appmsg" hover-class="weui-cell_active" style="margin-top:3px;background:#fff;height:230rpx">
                            <view style="margin: -0px 0 -0px -10px;width:230rpx;padding:15px;height:230rpx;" class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                                <image class="weui-media-box__thumb" src="{{icon60}}"/>
                            </view>
                            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" style="margin-top:-10px;margin-bottom:-10px;">
                                <view class="weui-media-box__title" style="font-size:14px;">{{item.name}}</view>
                                <view class="weui-media-box__desc" style="margin-top:20px;display:flex;">
                                  <view class="price">￥{{item.price}}</view>
                                  <view style="">加</view>
                                </view>
                            </view>
                        </navigator>
                    </block>
                   
                    
                </view>
            </view>
